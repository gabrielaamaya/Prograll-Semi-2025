<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TabHost
        android:id="@+id/tbhMetros"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Tab Metros -->
                <RelativeLayout
                    android:id="@+id/tabMetros"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/txtMetrosCantidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:hint="Cantidad a convertir" />

                    <Button
                        android:id="@+id/btnMetrosConvertir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtMetrosCantidad"
                        android:layout_marginTop="20dp"
                        android:text="CONVERTIR" />

                    <TextView
                        android:id="@+id/lblrespuesta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnMetrosConvertir"
                        android:layout_marginTop="20dp"
                        android:text="Respuesta: ?" />
                </RelativeLayout>

                <!-- Tab Área -->
                <RelativeLayout
                    android:id="@+id/tabConversor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/txtAreaCantidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:hint="Cantidad a convertir" />

                    <Button
                        android:id="@+id/btnAreaConvertir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtAreaCantidad"
                        android:layout_marginTop="20dp"
                        android:text="CONVERTIR" />

                    <TextView
                        android:id="@+id/lblAreaRespuesta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnAreaConvertir"
                        android:layout_marginTop="20dp"
                        android:text="Resultado: ?" />
                </RelativeLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>
</RelativeLayout>