<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro">

    <!-- Titulo Usuario centrado en la parte superior -->
    <TextView
        android:id="@+id/lblUser"
        android:text="Usuario:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true" />

    <!-- EditText para Nombre de Usuario debajo del TextView -->
    <EditText
        android:id="@+id/txtUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblUser"
        android:layout_margin="20dp"
        android:hint="Nombre del Usuario" />

    <!-- BotÃ³n centrado en la parte inferior -->
    <ImageButton
        android:id="@+id/btnGuardarUser"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/txtUser"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher_round"
        android:background="@android:color/transparent"
        android:contentDescription="Guardar Usuario" />
</RelativeLayout>




